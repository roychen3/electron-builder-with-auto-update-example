{
  "name": "my-electron-app",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "start": "electron .",
    "package": "electron-builder",
    "package:dir": "electron-builder --dir",
    "package:no-sign": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "package:dir:no-sign": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Roy Chen",
  "license": "ISC",
  "description": "A sample Electron app built with electron-builder.",
  "devDependencies": {
    "@types/node": "^24.0.3",
    "electron": "36.4.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "MyElectronApp",
    "extraMetadata": {
      "name": "MyElectronApp"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "pkg"
    },
    "files": [
      "dist/**/*",
      "ui/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    }
  }
}
